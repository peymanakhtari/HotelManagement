@using System.Security.Claims;
@using hotelsimorgh.Data;

<!DOCTYPE html>
<html dir="rtl" lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.5/font/bootstrap-icons.min.css" integrity="sha512-ZnR2wlLbSbr8/c9AgLg3jQPAattCUImNsae6NHYnS9KrIwRdcY9DxFotXhNAKIKbAXlRnujIqUWoXXwqyFOeIQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="/css/font.css">
    <link rel="stylesheet" href="/css/index.css">
    <script src="~/lib/jquery.js"></script>
    <script type="text/javascript" src="https://unpkg.com/xlsx@0.15.1/dist/xlsx.full.min.js"></script>

</head>

<body>

    <header class="menu">
        <nav class="navbar navbar-expand-xl navbar-light bg-light ">
            <div class="container-fluid">
                <a dir="rtl" tabindex="-1" class="navbar-brand fw-bold ms-4" href="#">@(((ClaimsIdentity)User.Identity).GetSpecificClaim("FullName"))، خوش آمدید!</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div style="justify-content: space-between;" class="collapse navbar-collapse text-center fw-bold" id="navbarNavDropdown">
                    <ul dir="rtl" class="navbar-nav ">
                        <li class="nav-item dropdown ">
                            <a tabindex="-1" class="nav-link dropdown-toggle" href="#" id="navbarScrollingDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                گزارش گیری
                            </a>
                            <ul class="dropdown-menu text-center" aria-labelledby="navbarScrollingDropdown">
                                <li><a class="dropdown-item " href="/Report/Reserve?dateRange=1402/5/1 - 1402/5/31">گزارش‌گیری رزرو‌ها</a></li>
                                <li><a class="dropdown-item " href="/Report/Passengers?dateRange=1402/5/1 - 1402/5/31"> گزارش‌گیری مسافران</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item " href="/Report/deletedreserves">رزرو‌های حذف شده</a></li>
                            </ul>
                        </li>

                        <li class="nav-item"><a tabindex="-1" class="nav-link  @(Context.Request.Path.StartsWithSegments("/Reserve/ReservesTable") ? "active" : "")" href="/Reserve/ReservesTable"> وضعیت اتاق‌ها </a></li>
                        <li class="nav-item"><a tabindex="-1" class="nav-link @(Context.Request.Path.StartsWithSegments("/folio/Index") ? "active" : "")" href="/folio/Index">لیست فولیو‌ها </a></li>
                        <li class="nav-item"><a tabindex="-1" class="nav-link @(Context.Request.Path.StartsWithSegments("/Home/index") ? "active" : "")" href="/Home/index"> لیست رزرو‌ها </a></li>
                        <li class="nav-item"><a tabindex="-1" target="_blank" class="nav-link fw-light text-light btn btn-success @(Context.Request.Path.StartsWithSegments("/folio/addoredit") ? "active" : "")" href="/folio/addoredit">ثبت فولیو </a></li>
                        <li class="nav-item"><a tabindex="-1" target="_blank" class="nav-link fw-light text-light btn btn-success @(Context.Request.Path.StartsWithSegments("/reserve/addoredit") ? "active" : "")" href="/reserve/addoredit">ثبت رزرو </a></li>
                        <li class="nav-item"><a tabindex="-1" class="nav-link fw-light text-light btn btn-dark @(Context.Request.Path.StartsWithSegments("/Home/About") ? "active" : "")" href="/Home/About">درباره این  اپلیکیشن </a></li>
                    </ul>
                    <a tabindex="-1" href="/User/Logout" style="background-color: rgb(187, 3, 3);" class="btn  btn-danger fw-light btnLogout">خروج <i class="bi bi-box-arrow-left"></i></a>
                </div>
            </div>
        </nav>
    </header>

    <script src="/lib/vue.js"></script>
    <script src="/lib/datetimepicker.js"></script>

    @RenderBody()
    <script src="~/lib/bootstrap-bundle.js"></script>


    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/js.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>

</html>
